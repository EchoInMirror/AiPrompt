
<MButton Icon @onclick="@(async ()=>{
                                await Clipboard.SetTextAsync(Text);
                                open = true;
                            })">
    <MIcon>mdi-note-multiple-outline</MIcon>
</MButton>

<MSnackbar @bind-Value="open"
           Vertical Dark>
    <ChildContent>
        已复制到剪切板
    </ChildContent>
    <ActionContent>
        <MButton Color="blue darken-1"
                 Text
                 OnClick="()=>open = false">
            关闭
        </MButton>
    </ActionContent>
</MSnackbar>

@code {
    private string text;
    [Parameter]
    public string Text { get{
            if (!text.EndsWith(","))
            {
                return $"{text},";
            }
            return text;
        } set=>text=value; }
    private bool open = false;
}
