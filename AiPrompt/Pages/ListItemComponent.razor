@using AiPrompt.Data
<MCard>
    <MImage Src="@(Prompt.Image??defaultImage)" Class="white--text align-end" Gradient="to bottom, rgba(0,0,0,.1), rgba(0,0,0,.5)" Height=200>
        <MCardTitle>@Prompt.Name</MCardTitle>
    </MImage>

    <MCardActions>
        <span class="overflow-x-auto">@Prompt.Key</span>
        <MSpacer></MSpacer>
        <CopyComponent Text="@Prompt.Key" />
    </MCardActions>
</MCard>
@code {
    [Parameter]
    public Prompt Prompt{ get; set; }
    [Parameter]
    public EventCallback<Prompt> PromptChanged { get; set; }


    private string defaultImage = "data:image/png;base64,";
}
